
@model IEnumerable<Core.Entities.DepartmentModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Department List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Department" asp-action="Create" class="btn btn-primary">
                Create New Department
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-hover" style="width:100%; cursor:pointer;">
            <thead>
                <tr>
                    <th>
                        Department Name
                    </th>
                    <th>
                        Department Logo
                    </th>
                    <th>
                        
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="50%">
                        @obj.DepartmentName
                    </td>
                    <td width="30%"> 
                    <img src="~/images/@obj.DepartmentLogo"  class="rounded-circle" height="40" width="40"  asp-append-version="true" />
                    </td>
                     <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-action="Details"  asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                         Details
                            </a>
                        </div>
                    </td>
    
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Department exists.</p>
    }

</div>

