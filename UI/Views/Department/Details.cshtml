@model Core.Infrastracture.Dtos.DepartmentDetailsDto


<div class="card-body container">
    <div class="col-lg-12">
    <h4>Title: @Model.DepartmentName</h4>
    <img src="~/images/@Model.DepartmentLogo"  class="rounded-circle" height="40" width="40"  asp-append-version="true" />
</h4>
</div>

</div>

<div class="card container-fluid">
    <div class="row">
            <div class="col-lg-6">
                <h4 class="d-flex justify-content-center">Parent Department List</h4>
      <table class="table table-bordered table-striped">
         <thead>
              <tr>
                <th width="50%">Name</th>
                <th width="50%">Logo</th>
              </tr>
         </thead>
            @foreach(var obj in Model.MainDepartments)
                {<tr>
                        <td width="50%">
                            @obj.DepartmentName
                    </td>
                    <td width="50%"> 
                    <img src="~/images/@obj.DepartmentLogo"  class="rounded-circle" height="40" width="40"  asp-append-version="true" />
                    </td>
                    </tr>
                }
        </table>

    </div>
    <div class="col-lg-6">
        <h4 class="d-flex justify-content-center">SubDepartment List</h4>
        <table class="table table-bordered table-striped">
         <thead>
              <tr>
                <th width="50%">Name</th>
                <th width="50%">Logo</th>
              </tr>
         </thead>
            @foreach(var obj in Model.SubDepartments)
                {<tr>
                        <td width="50%">
                            @obj.DepartmentName
                    </td>
                    <td width="50%"> 
                    <img src="~/images/@obj.DepartmentLogo"  class="rounded-circle" height="40" width="40"  asp-append-version="true" />
                    </td>
                    </tr>
                }
        </table>
</div>
    </div>
    </div>
</div>